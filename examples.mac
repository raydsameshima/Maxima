"Bernoulli Numbers"$
B[n] := block(
  [f,g],
  f(x) := x/(exp(x) -1),
  g[n](x) := taylor(f(x),x,0,n),
  return(
    at( diff(g[n](x),x,n), x=0)
  )
);

/* Using the recurrence relation, see wikipedia for example. */
B_[n] := -1/(n+1) * sum(binomial(n+1,k)*B[k],k,0,n-1);

